<h2>Here are all the tasks you need to do</h2>

<ul>
<% @tasks.each do |task| %>
  <li>
    <%= link_to task.content, task_path(task) %> <%= link_to "edit", edit_task_path(task) %>
    <%= link_to "delete", task_path(task),
    method: :delete,
    data: {confirm: "Are you sure?"} %>
  </li>
<% end %>
</ul>

<h3><%= link_to "Here if you want to create a new task", new_task_path %> </h3>